<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="INFT_2051.MainPage"
             Title="Homepage">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            
        IconImageSource="meatballs.png"
        Clicked="Settings_Clicked"

        />
        
    </ContentPage.ToolbarItems>

    <ScrollView>
        <FlexLayout
            Direction="Column"
            JustifyContent="SpaceEvenly"
            AlignItems="Center">

            <Label
            HorizontalTextAlignment="Start"
            Text="Hello User!"
            FontSize="Medium"
            />

            <Image
                Source="bmw.png"
                WidthRequest="300"/>

            <Button
                x:Name="CharacterButton"
                Text="Take a Photo"
                HorizontalOptions="Center"
                Clicked="CharacterButton_Clicked"/>
            <Button
                x:Name="CollectionButton"
                Text="View Collection"
                HorizontalOptions="Center"
                Clicked="CollectionButton_Clicked"/>
            <Button
                x:Name="GarageButton"
                Text="View Collection"
                HorizontalOptions="Center"
                Clicked="GarageButton_Clicked"/>

        </FlexLayout>
    </ScrollView>
</ContentPage>
