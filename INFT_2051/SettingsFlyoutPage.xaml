<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="INFT_2051.SettingsFlyoutPage"
            Title="Settings"
            FlyoutLayoutBehavior="Default">

    <FlyoutPage.Flyout>
        <ContentPage Title="Menu">
            <StackLayout Padding="10">

            </StackLayout>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage Title="Settings">
                    <StackLayout>
                        <Button Text="My Account" Clicked="OnSettingsClicked"/>
                        <Button Text="Permissions" Clicked="OnProfileClicked"/>
                    </StackLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </FlyoutPage.Detail>

</FlyoutPage>